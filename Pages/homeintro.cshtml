@page
@model LifeAssisttt.Pages.Pages_homeintro
@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LifeAssist - Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* General  */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #002d62;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar .nav-link {
                color: white;
                font-weight: bold;
            }

                .navbar .nav-link:hover {
                    color: #ffc107; 

        .navbar-brand img {
            max-height: 50px;
        }

        /* Welcome Section */
        .welcome-section h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .welcome-section p {
            font-size: 1.2rem;
            color: #555;
            line-height: 1.6;
        }

        .welcome-section img {
            max-height: 150px;
            margin-top: 20px;
        }

        /* Features Section */
        .features-section .feature-box {
            padding: 20px;
            color: black;
            border-radius: 10px;
            margin-bottom: 20px;
        }

            .features-section .feature-box:nth-child(1) {
                background-color: #2c3e50;
                
            }

            .features-section .feature-box:nth-child(2) {
                background-color: #2c3e50;
            }

            .features-section .feature-box:nth-child(3) {
                background-color: #2c3e50;
            }

            .features-section .feature-box:nth-child(4) {
                background-color: #2c3e50;
            }
        .features-section  {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .features-section p {
            font-size: 1rem;
        }


    </style>

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/project life assist - copy/logo.png" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="https://localhost:7272/categories">Categories</a>
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Section -->
    <div class="container welcome-section text-center mt-5">
        <h1>WELCOME</h1>
        <p>Welcome to LifeAssist! Your go-to platform for trusted medical tools and equipment. Whether you're looking to buy or rent, we've got you covered with high-quality products from top suppliers. Our mission is to make your experience seamless, affordable, and reliable. Start exploring today and find the perfect solutions for your needs!</p>
        <img src="~/project life assist - copy/logo.png" />
        
    </div>

    <!-- Features Section -->
    <div class="container features-section text-center my-5">
        <div class="row">
            <div class="col-md-6 feature-box">
                <h4>QUALITY</h4>
                <p>We Ensure Quality Is First In Everything We Do, Giving Our Best To Justify - What We Do, We Do Well.</p>
            </div>
            <div class="col-md-6 feature-box">
                <h4>PERFORMANCE</h4>
                <p>Creating A Pathway To Success By Developing Practices That Ensure Better Results And Strives For Development.</p>
            </div>
            <div class="col-md-6 feature-box">
                <h4>COMMITMENT</h4>
                <p>Adhere To The Best Products, Services, And Other Initiatives That Benefits Both Internal And External Environments Of Organization.</p>
            </div>
            <div class="col-md-6 feature-box">
                <h4>SAFETY</h4>
                <p>Ensuring Safety On Top Of All By Adopting The Measures By Delivering High-Quality, Safe, And Secure Products And Manufacturing Standard Protocols.</p>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
