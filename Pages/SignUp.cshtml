@page
@model LifeAssisttt.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .signup-container {
            max-width: 400px;
            margin: 50px auto;
            background-color: #f0f4f8;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px 30px;
        }

            .signup-container h1 {
                text-align: center;
                margin-bottom: 20px;
                color: #333333;
            }

            .signup-container input {
                margin-bottom: 15px;
            }

            .signup-container button {
                width: 100%;
                background-color: #002855; /* كحلي */
                color: white;
                border: none;
            }

                .signup-container button:hover {
                    background-color: #001f40; /* لون أغمق للكحلي */
                }

        .footer {
            background-color: #002855; /* كحلي */
            color: white;
            padding: 30px 0;
            margin-top: 30px;
            width: 100%;
        }

            .footer .footer-content {
                display: flex;
                justify-content: space-between;
                align-items: center;
                max-width: 1200px;
                margin: 0 auto;
            }

            .footer .logo-section img {
                max-width: 150px;
                margin-bottom: 15px;
            }

            .footer .social-icons {
                display: flex;
                gap: 15px;
            }

                .footer .social-icons a {
                    color: white;
                    font-size: 20px;
                    text-decoration: none;
                }

                    .footer .social-icons a:hover {
                        color: #f8f9fa;
                    }

            .footer .info-section,
            .footer .contact-section {
                text-align: left;
            }

                .footer .info-section h5,
                .footer .contact-section h5 {
                    font-size: 18px;
                    margin-bottom: 10px;
                }

            .footer ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .footer ul li {
                    margin-bottom: 5px;
                }

                    .footer ul li a {
                        color: #f8f9fa;
                        text-decoration: none;
                    }

                        .footer ul li a:hover {
                            text-decoration: underline;
                        }

            .footer .contact-section p {
                margin: 0;
                font-size: 14px;
            }
    </style>
</head>
<body>
    <div class="signup-container">
        <h1>Sign Up</h1>
        <form method="post">
            <input name="FirstName" type="text" class="form-control" placeholder="First Name" required />
            <input name="LastName" type="text" class="form-control" placeholder="Last Name" required />
            <input name="Email" type="email" class="form-control" placeholder="Email" required />
            <input name="Password" type="password" class="form-control" placeholder="Password" required />
            <input name="PhoneNumber" type="tel" class="form-control" placeholder="Phone Number" required />
            <button type="submit" class="btn">Sign Up</button>
        </form>
    </div>

    <div class="footer">
        <div class="footer-content">
            <!-- Logo Section -->
            <div class="logo-section">
                <img src="logo.png" alt="LifeAssist Logo">
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <!-- Information Section -->
            <div class="info-section">
                <h5>INFORMATION</h5>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">About us</a></li>
                </ul>
            </div>
            <!-- Contact Section -->
            <div class="contact-section">
                <h5>CONTACT</h5>
                <p>Phone: +962791234568</p>
                <p>Email: Lifeassist@gmail.com</p>
            </div>
        </div>
    </div>
</body>
</html>
